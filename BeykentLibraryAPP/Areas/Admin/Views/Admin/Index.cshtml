
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/">Admin</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
    </nav>
</div>


<section class="section dashboard">
    <div class="row">


        <div class="col-lg-12">
            <div class="row">
                @await Component.InvokeAsync("_AdminStatisticsComponentPartial")

                @await Component.InvokeAsync("_AdminLastAddFiveBookComponentPartial")

            </div>
        </div>



        <div class="col-lg-12">
            @await Component.InvokeAsync("_AdminBookChartComponentPartial")
        </div>

    </div>

</section>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var adminLink = document.querySelector('a[href="/Admin"]');

        if (adminLink) {
            adminLink.classList.remove("collapsed");
            adminLink.classList.add("nav-link");
        }
    });
</script>

